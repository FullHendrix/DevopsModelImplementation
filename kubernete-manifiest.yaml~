#Database
apiVersion: apps/v1
kind: Deployment
metadata:
  name: database-portsadapterbackendimplementation
spec:
  replicas: 1
  selector:
    matchLabels:
      app: database-portsadapterbackendimplementation
  template:
    metadata:
      labels:
        app: database-portsadapterbackendimplementation
    spec:
      nodeSelector:
        "beta.kubernetes.io/os": linux
      containers:
      - name: database-portsadapterbackendimplementation
        image: fullhendrix/database
        imagePullPolicy: Always
        ports:
        - containerPort: 1433
